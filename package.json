{
  "name": "tonemato",
  "version": "1.0.0",
  "description": "",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "dotenv -- turbo run dev",
    "dev:drilbur": "dotenv -- turbo run dev --filter=drilbur",
    "dev:ralts": "dotenv -- turbo run dev --filter=ralts",
    "dev:smeargle": "dotenv -- turbo run dev --filter=smeargle",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "dotenv-cli": "^7.2.1",
    "esbuild": "^0.17.17",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "turbo": "latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RopFoo/tonemato.git"
  },
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/tonemato-utils/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "author": "",
  "license": "ISC",
  "packageManager": "npm@9.5.1"
}
